.site
  margin 0
  position relative
.site-header
  background-color almostWhite
  border-bottom 1px solid baseBorderColor
  box-shadow inset 0 0 80px rgba(65, 120, 107, 0.1)
  margin 0
  .wrapper
    background-color transparent
    border none
    box-shadow none
    margin 0 auto
    padding 1rem
  .title
    font-size 150%
    margin 0
    a
      display block
      text-decoration none
      text-align center
      width 200px
.meta
  color #aaa
.wrapper
  background-color white
  background-clip padding-box
  border 5px solid baseOrangeAlpha
  box-shadow 2px -2px 2px rgba(0, 0, 0, 0.5), -2px 2px 2px rgba(0, 0, 0, 0.5), inset 0 5px 200px rgba(65, 120, 107, 0.2)
  margin .75rem auto
  max-width 1000px
  padding 2rem

.main-area
  padding 0
  .main-title
    font-size 300%
    padding 0
  h3
    margin-top 1.5rem

.all-pages
  margin 2% 0
  ul
    margin 0 0 0 2%

.video
  max-width 100%

.footer
  font-size 80%
  color #666
  border-top 2px solid baseBorderColor
  margin-top 2%
  overflow hidden
  padding 2% 0 0
  p
    margin 0 0 .5rem
  .contact
    float left
    margin-right 3em
    span
      display block

@media screen-breakpoint-one
  .site-header .title a
    width 170px
  .wrapper
    border none
    margin 0

@media screen-breakpoint-two
  .site
    margin 0
  .wrapper
    margin 0
    padding 1rem
  .site-header
    margin 0
    .title
      width 100%
  .logo, .site-header a
    width 150px

@media screen-landscape-breakpoint-one
  .wrapper
    border none
  .site-header .title a
    width 100px
    a
      font-weight 200

@media screen-portrait-breakpoint-two
  .wrapper
    border none
  .site-header .title a
    width 100px
    a
      font-weight 200