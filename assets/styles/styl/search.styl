.search-wrapper
  margin auto 0
  position relative
  h3, p
    font-weight 200
  p
    margin 0
  .search-results
    background-color almostWhite
    border 1px solid opinsysCyan
    border-radius 2px
    box-shadow inset 0 -10px 20px rgba(65, 120, 107, 0.1), inset 0 10px 20px rgba(65, 120, 107, 0.1)
    margin 0
    padding 1rem
    position absolute
    width 100%
    z-index 2
    .search-results-header
      font-size 130%
      margin 0 0 1%
    .search-result
      h3
        font-size 100%
        margin 0 0 .5rem
  i
    color darkBg
    font-size 120%
    position absolute
    right 1%
    top 10%
  input[type=text]
    border-radius 2px
    padding-right 2rem
    width 100%
    &:focus
      border-color opinsysCyan

@media screen-breakpoint-two
  .search-wrapper
    margin 1rem 0 0
    width 100%

@media screen-landscape-breakpoint-one
  .search-wrapper
    .search-results
      position relative

@media screen-portrait-breakpoint-two
  .search-wrapper
    .search-results
      position relative