.search-wrapper
  margin 0 0 1rem
  h3, p
    font-weight 200
  .search-results
    background-color almostWhite
    border 1px solid opinsysCyan
    border-radius 4px
    box-shadow inset 0 -10px 20px rgba(65, 120, 107, 0.1), inset 0 10px 20px rgba(65, 120, 107, 0.1)
    margin 0
    padding 1rem
    .search-results-header
      font-size 130%
      margin 0 0 1%
    .search-result
      h3
        font-size 130%
        margin 0 0 .5rem
  input[type=text]
    width 100%
    &:focus
      border-color opinsysCyan