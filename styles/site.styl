.main-area
  padding 0 2%

.site
  font-size 115%
  margin 3em auto 2em
  max-width 1018px
  text-align left
  width 80%
  .header
    a
      font-weight bold
      text-decoration none
      &.extra
        color #aaa
        margin-left 1em
        &:hover
          color #000
    .title
      display inline-block
      a
        color #a00
        &:hover
          color #000
  .meta
    color #aaa
  .footer
    font-size 80%
    color #666
    border-top 4px solid #eee
    margin-top 2em
    overflow hidden
    .contact
      float left
      margin-right 3em
      a
        color #8085C1
    .rss
      margin-top 1.1em
      margin-right -.2em
      float right
      img
        border 0

