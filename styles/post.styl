.post
  pre
    border 1px solid #ddd
    background-color #eef
    padding 0 .4em
    code
      border none
    &.terminal
      border 1px solid #000
      background-color #333
      color #FFF
      code
        background-color #333
  code
    border 1px solid #ddd
    background-color #eef
    padding 0 .2em

.post ul, .post ol
  margin-left 1.35em

.post-categories
  li
    list-style none
    display inline-block
    &:last-child
      span:after
        content ""
    span
      &:after
        content ","
